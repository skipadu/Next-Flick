<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom text styles for the Details-screen -->
    <style name="DetailTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">@dimen/margin_zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#737373</item>
    </style>

    <style name="DetailLandscapeTextView" parent="DetailTextView">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="BoldDetailTextView" parent="DetailTextView">
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
